<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="value_text"  parent="@android:style/Widget.TextView">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="field_text"  parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonNormal" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>
    <style name="SymptomText" parent="android:style/Widget.TextView">
        <!--<item name="android:textColor">@android:color/black</item>-->
        <!--<item name="android:textSize">16dp</item>-->
    </style>
    <style name="SymptomValue" parent="style/SymptomText">
        <item name="android:textSize">18dp</item>
    </style>

</resources>
